{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "array",
    "items": {
        "$ref": "#/components/schemas/PatchItem"
    },
        "minItems": 1,

    "components": {
        "schemas": {
            "PatchItem": {
                "type": "object",
                "additionalProperties": false,
                "required": ["op", "path"],
                "properties": {
                    "op": {
                        "anyOf": [{
                                "type": "string",
                                "enum": ["add", "remove", "replace", "move", "copy", "test"]
                            },
                            {
                                "type": "string"
                            }
                        ]
                    },
                    "path": {
                        "type": "string"
                    },
                    "value": {
                        "nullable": true
                    },
                    "from": {
                        "type": "string"
                    }
                }
            }
        }
    }
}
